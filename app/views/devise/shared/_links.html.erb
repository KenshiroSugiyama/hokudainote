<%- if controller_name != 'sessions' %>
<div class="pt-1  ">
  <%= link_to "ログイン", new_session_path(resource_name),:style=>"color:black;" %><br />
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="pt-1 ">
  <%= link_to "新規登録", new_registration_path(resource_name),:style=>"color:black;" %><br />
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="pt-1 ">  
  <%= link_to "パスワードの再発行", new_password_path(resource_name),:style=>"color:black;" %><br />
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="pt-1 ">  
  <%= link_to "確認メールの再送信", new_confirmation_path(resource_name),:style=>"color:black;" %><br />
</div>
<% end %>


<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
 <div class="pt-1 "> 
  <%= link_to "アカウント凍結解除メールの再送信", new_unlock_path(resource_name),:style=>"color:black;" %><br />
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="mt-3 btn btn-light"> 
    <%=image_tag 'google.png', :size => '30x30' %> <%= link_to "Google アカウントでログイン", omniauth_authorize_path(resource_name, provider),:style=>"color:black;" %>
  </div>
  <% end %>
<% end %>
