<div class="text-center pt-5">
  <h2>マイページ</h2>
</div>
<br>
<div class="row pl-3 pr-3 mb-5">
  <div class="offset-sm-4 col-sm-4 mr-5 ml-5 mt-3">
    <div class="card card-body bg-info mb-3   mr-2 ml-2">
        <%= link_to 'プロフィール',user_profile_path(id: current_user.id), class: "text-center ",:style=>"color:white;"%>
    </div>
    <div class="card card-body bg-info mb-3   mr-2 ml-2">
        <%= link_to '売上管理',sales_path, class: "text-center",:style=>"color:white;"%>
    </div>
    <div class="card card-body bg-info mb-3   mr-2 ml-2 ">
        <%= link_to 'ノート管理',releases_path, class: "text-center",:style=>"color:white;"%>
    </div>
    <div class="card card-body bg-info mb-3   mr-2 ml-2 ">
    <% unless current_user.bank_account.present?%>
        <%= link_to '口座登録',new_bank_account_path, class: "text-center",:style=>"color:white;"%>
    <% else %>
        <%= link_to '銀行口座',bank_account_path(@account), class: "text-center",:style=>"color:white;"%>
    <% end %>
    </div>
  </div>
</div>