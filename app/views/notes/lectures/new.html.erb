<div class="text-center pt-5">
  <h3>授業情報入力</h3>
</div>
<div class="row ml-4 mr-4">
<div class="offset-sm-4 col-sm-4 text-center">
    <%= form_with(model: @note, url: lectures_path,method: :post ,local: true) do |f| %>
    <%= render 'layouts/error_messages', model: @note %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class = 'faculty mt-4'> 
        <%= f.label :faculty, "学部"%></br>
        <%= f.collection_select :faculty, Faculty.all, :id, :name,{prompt: "選択して下さい"} %>
        </div>

        <div class = 'get_departments mt-3'>
        <%= render partial: 'get_departments', locals: {faculty_id: Faculty.first.id } %>
        </div>

        <div class = 'get_educators mt-3'>
        <%= render partial: 'get_educators', locals: {department_id: Department.first.id } %>
        </div>
    
        <div class = 'get_lectures mt-3'>
        <%= render partial: 'get_lectures', locals: {educator_id: Educator.first.id } %>
        </div>
        <div class = 'form-group mt-4'> 
        <%= f.label :description, "説明(授業の詳細)"%></br>
        <%= f.text_area :description , class: 'form-control' %>
        </div>

        <div class = 'form-group'> 
        <%= f.label :price, "値段"%></br>
        <%= f.number_field :price, class: 'form-control' %>
        </div>

        <div class = 'form-group'> 
        <%= f.label :grade, "成績"%></br>
        <%= f.select :grade, ['A+','A','A-','B+','B','B-','C+','C','落単','?'], class: 'form-control' %>
        </div>

        <div class = 'form-group'> 
        <%= f.label :year, "受講年度"%></br>
        <%= f.number_field :year , class: 'form-control'%>
        </div>
        <%= f.submit '登録して次へ', class: 'btn btn-info btn-block mt-5 mb-5' %>    
    <% end %>
</div>
</div>
