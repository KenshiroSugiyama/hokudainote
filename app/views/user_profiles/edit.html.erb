<div class="text-center p-4">
  <h3>プロフィール編集ページ</h3>
</div>
<div class="row pr-5 pl-5">
  <div class="offset-sm-4 col-sm-4">

    <%= form_with(model: @profile,url: {controller: 'user_profiles', action: 'update' },method: :put,  local: true) do |f| %>
      
      <div class="form-group text-center">
        <%= f.label :name, 'ニックネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.label :school_year, '学年' %>
        <%= f.number_field :school_year, class: 'form-control' %>
      </div>

      <div class = 'faculty text-center'> 
        <%= f.label :faculty, "学部"%></br>
        <%= f.collection_select :faculty, Faculty.all, :id, :name,{prompt: "選択して下さい"} %>
      </div>

      <div class = 'get_departments text-center pb-5 pt-3'>
        <%= render partial: 'get_departments', locals: {faculty_id: Faculty.first.id } %>
      </div>

      <div class="pb-5">
      <%= f.submit '更新', class: 'btn btn-info btn-block' %>
      </div>
    <% end %>
  </div>
</div>